<div class="row">
  <div class="col-auto text-3xl">
    <h2>Welcome,<span class="text-teal-300 font-bold underline">{{name}}</span>!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Blog title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Enter blog's description:</label>
        <textarea class="form-input shadow-lg" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary outline-blue-500 underline decoration-sky-500">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a class="font-mono text-lg " href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm text-white bg-red-600 underline decoration-teal-600" data-id="{{post.id}}">DELETE</button>
      </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
